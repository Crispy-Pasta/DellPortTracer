# Test Environment Configuration for CPU Safety Testing
# Lower thresholds to make it easy to trigger protection zones

# Dell Switch SSH Credentials (for testing - won't actually connect)
SWITCH_USERNAME=testuser
SWITCH_PASSWORD=testpass

# Web Service Configuration
FLASK_SECRET_KEY=test-secret-key-for-cpu-testing
MAX_REQUESTS_PER_HOUR=50

# Active Directory Configuration (disabled for testing)
USE_WINDOWS_AUTH=false

# CPU Safety Thresholds (Lower values for easy testing)
CPU_GREEN_THRESHOLD=20
CPU_YELLOW_THRESHOLD=40
CPU_RED_THRESHOLD=60

# Concurrent User Limiting
MAX_CONCURRENT_USERS_PER_SITE=5
MAX_WORKERS_PER_SITE=3

# Switch Protection Monitor Configuration (for testing)
MAX_CONNECTIONS_PER_SWITCH=8
MAX_TOTAL_CONNECTIONS=64
COMMANDS_PER_SECOND_LIMIT=10

# Web User Passwords
OSS_PASSWORD=oss123
NETADMIN_PASSWORD=netadmin123
SUPERADMIN_PASSWORD=superadmin123
WEB_PASSWORD=password

# Syslog Configuration (optional)
# Set to 'disabled' or leave empty to disable syslog
# SYSLOG_SERVER=syslog.example.com
# SYSLOG_PORT=514
SYSLOG_SERVER=disabled
